<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpPage"
    android:orientation="vertical"
    android:background="@drawable/helpback">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/tp"


                android:text="Select problem"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                />


            <RadioGroup
                android:id="@+id/radio1"
                android:layout_below="@id/tp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <RadioButton
                    android:id="@+id/c1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"


                    android:buttonTint="#FFFFFF"
                    android:checked="true"
                    android:onClick="onClickRadiobutton"
                    android:text="Help for others"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:layout_alignParentLeft="true" />

                <RadioButton
                    android:id="@+id/c2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"

                    android:buttonTint="#FFFFFF"
                    android:onClick="onClickRadiobutton"
                    android:text="Help for yourself"
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:layout_alignParentLeft="true" />
            </RadioGroup>
            <LinearLayout
                android:id="@+id/ll12"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/radio1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name :"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>
                <EditText
                    android:layout_marginStart="40dp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"

                    android:backgroundTint="#FFFFFF"
                    android:background="@drawable/btn_select"
                    android:textSize="22sp"
                    android:hint="john doe"
                    android:gravity="right"
                    android:textColorHint="#228B22"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="22dp"
                android:layout_below="@id/ll12"
                android:id="@+id/ll13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City :"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>
                <EditText
                    android:layout_marginStart="60dp"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:hint="eg:jaipur"
                    android:gravity="right"

                    android:textColorHint="#228B22"
                    android:textSize="22sp"

                    android:backgroundTint="#FFFFFF"
                    android:background="@drawable/btn_select"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:id="@+id/ll14"
                android:layout_marginEnd="0dp"
                android:layout_below="@id/ll13"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DOB :"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:background="@drawable/btn_select"
                    android:backgroundTint="#FFFFFF"
                    android:gravity="right"

                    android:hint="DD/MM/YYYY"
                    android:textColorHint="#228B22"
                    android:textSize="22sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="0dp"
                android:layout_below="@id/ll14"
                android:id="@+id/l115"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DOB :"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:background="@drawable/btn_select"
                    android:backgroundTint="#FFFFFF"

                    android:gravity="right"

                    android:hint="DD/MM/YYYY"
                    android:textColorHint="#228B22"
                    android:textSize="22sp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/l116"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="0dp"
                android:layout_below="@id/l115"


                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DOB :"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:background="@drawable/btn_select"
                    android:backgroundTint="#FFFFFF"

                    android:gravity="right"

                    android:hint="DD/MM/YYYY"
                    android:textColorHint="#228B22"
                    android:textSize="22sp"
                    android:layout_marginLeft="35dp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll17"
                android:layout_marginTop="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/l116">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type of Help :"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>
                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"


                    android:background="@drawable/spin_bg"
                    android:spinnerMode="dropdown"
                    android:textSize="28sp" />



            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl12"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll17">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_launcher_background"/>
            </RelativeLayout>
            <Button
                android:layout_width="250dp"
                android:layout_marginTop="20dp"
                android:layout_height="45dp"

                android:layout_below="@id/rl12"
                android:layout_marginStart="20dp"
                android:id="@+id/btn5"
                android:layout_marginLeft="20dp" />




        </RelativeLayout>

    </ScrollView>







</RelativeLayout>